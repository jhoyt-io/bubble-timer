<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    android:keepScreenOn="true">

    <!-- Timer display taking up most of the screen -->
    <io.jhoyt.bubbletimer.TimerView
        android:id="@+id/timer_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/stop_button_container"
        android:layout_marginBottom="20dp" />

    <!-- Stop button container at the bottom -->
    <LinearLayout
        android:id="@+id/stop_button_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="40dp"
        android:gravity="center"
        android:orientation="vertical">

        <Button
            android:id="@+id/stop_button"
            android:layout_width="300dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:background="@drawable/button_stop_alarm"
            android:text="STOP TIMER"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            android:textStyle="bold" />

    </LinearLayout>

</RelativeLayout>
