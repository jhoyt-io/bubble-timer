<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- Allow cleartext traffic for development -->
    <base-config cleartextTrafficPermitted="true">
        <trust-anchors>
            <certificates src="system"/>
        </trust-anchors>
    </base-config>
    
    <!-- Specific configuration for our WebSocket endpoint -->
    <domain-config cleartextTrafficPermitted="true">
        <domain includeSubdomains="true">zc4ahryh1l.execute-api.us-east-1.amazonaws.com</domain>
        <domain includeSubdomains="true">execute-api.us-east-1.amazonaws.com</domain>
    </domain-config>
    
    <!-- Allow localhost for emulator testing -->
    <domain-config cleartextTrafficPermitted="true">
        <domain includeSubdomains="true">localhost</domain>
        <domain includeSubdomains="true">10.0.2.2</domain>
    </domain-config>
</network-security-config> 